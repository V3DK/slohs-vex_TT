void cube5(bool autoSide){
  startTime = autoTimer.system();
  autoTimer.clear();
  //clear screen
  Brain.Screen.clearScreen();

  //set holds for auto movement
  angler.setStopping(brakeType::hold);
  leftRoller.setStopping(brakeType::hold);
  rightRoller.setStopping(brakeType::hold);
  lift.setStopping(brakeType::hold);

  //reset encoders
  resetOthers();

  //start angler to clear for lift
  angler.rotateTo(200, rotationUnits::deg,100,velocityUnits::pct, false);

  //lift up to flip out tray
  lift.rotateTo(550, rotationUnits::deg,100,velocityUnits::pct, true);

  

  angler.rotateTo(0,rotationUnits::deg,100,velocityUnits::pct, false);

  //lift down
  lift.rotateTo(0, rotationUnits::deg, 100, velocityUnits::pct, true);
  lift.spin(directionType::rev, (maxSpeed * 0.10), velocityUnits::pct);

  //start rollers
  leftRoller.spin(directionType::fwd, (maxSpeed), velocityUnits::pct);
  rightRoller.spin(directionType::rev, (maxSpeed), velocityUnits::pct);

  

  //reset drive encoders
  resetDrive();

  //start driving
  startPid(42, 30, true);
  driveCoast();

  lift.spin(directionType::rev, (maxSpeed * 0), velocityUnits::pct);

  //reset drive encoders
  resetDrive();

  startPid(-19.5, 60, true);
  driveCoast();

  leftRoller.stop(vex::brakeType::hold);
  rightRoller.stop(vex::brakeType::hold);

  if(autoSide)
  	startTurn(-11.5, 30);
  else
  	startTurn(12, 30);

  driveCoast();

  leftRoller.rotateFor(-215, vex::rotationUnits::deg, 50, vex::velocityUnits::pct, false);
  rightRoller.rotateFor(215, vex::rotationUnits::deg, 50, vex::velocityUnits::pct, false);

  startPid(18.5, 50, true);

  driveCoast();

  leftRoller.stop(vex::brakeType::coast);
  rightRoller.stop(vex::brakeType::coast);

  lift.setStopping(vex::brakeType::coast);
  angler.rotateTo(500,vex::rotationUnits::deg, 100, vex::velocityUnits::pct, true);

  angler.rotateTo(800,vex::rotationUnits::deg, 40, vex::velocityUnits::pct, true);

  //angler.rotateTo(800,vex::rotationUnits::deg, 40, vex::velocityUnits::pct, true);

  leftRoller.spin(directionType::rev, (maxSpeed * 0.4), velocityUnits::pct);
  rightRoller.spin(directionType::fwd, (maxSpeed * 0.4), velocityUnits::pct);

  startPid(-10, 20, true);

  angler.rotateTo(0,vex::rotationUnits::deg, 100, vex::velocityUnits::pct, true);
  lift.rotateTo(0, rotationUnits::deg, 100, velocityUnits::pct, true);

  //startPid(1.5, 30, true);
  driveCoast();

  leftRoller.spin(directionType::rev, (0), velocityUnits::pct);
  rightRoller.spin(directionType::fwd, (0), velocityUnits::pct);

  endTime = autoTimer.system() - startTime;
  Brain.Screen.printAt(1, 80, "%f", (endTime / 1000.0));
}

void tuningPid(){
	Brain.Screen.clearScreen();
	resetDrive();

	startSingleTurn(true, 50, 70);
	driveCoast();
}

void autonomous(void) {
  task pidTasks(pidTask);
  task turnTasks(turnTask);
  task singleTurnTasks(singleTurnTask);
  autoRunning = true;


  cube5(true);
  //tuningPid();


  //stop pid task - only needed for auto
  task::stop(pidTask); 
  task::stop(turnTask); 
  task::stop(singleTurnTask); 

  autoRunning = false;
  //wait 10 seconds - just in case (no repeat)
  task::sleep(10000);
}

void driveLockDetect(){
        if(Controller1.ButtonLeft.pressing()){
           //wait until released
           while(Controller1.ButtonLeft.pressing()){
               task::sleep(100);
           }
           //run func
            driveLockOn = !driveLockOn;
           driveLock(driveLockOn);
       }
    }

    void straightDrive(){
      if(Controller1.ButtonUp.pressing()){
        straightMove = true;
        while(Controller1.ButtonUp.pressing()){
          moveLeft(45);
          moveRight(45);
        }
      }
      else if(Controller1.ButtonDown.pressing()){
        straightMove = true;
        while(Controller1.ButtonDown.pressing()){
          moveLeft(-20);
          moveRight(-20);
        }
      }
      straightMove = false;
    }

int liftDeg = 0;

bool rollersOn = false; 
void liftButtonDetect(){
	liftDeg = lift.rotation(rotationUnits::deg);

  //increment and decrement buttons
  if(Controller1.ButtonX.pressing()){
           //wait until released
           while(Controller1.ButtonX.pressing()){
               task::sleep(50);
           }
           //run func
           if(liftPos == 0 ) {
            liftPos = 1;
            liftEnabled = true;
           }
       }
       else if(Controller1.ButtonB.pressing()){
        //wait until released
           while(Controller1.ButtonB.pressing()){
               task::sleep(75);
           }
           //run func
           if(liftPos == 1){
            liftPos = 0;
            liftEnabled = true;
           }
       }

       

       if(Controller1.ButtonA.pressing()){
          lift.spin(directionType::fwd, (maxSpeed), velocityUnits::pct);
        }
        else if(Controller1.ButtonY.pressing()){
          lift.spin(directionType::rev, (maxSpeed), velocityUnits::pct);
        }
        else {
          if(liftDeg > 250 * 0.7) {
            lift.stop(brakeType::hold);
          }
          else{
            if(rollersOn)
              lift.spin(directionType::rev, (maxSpeed * 0), velocityUnits::pct);
            else
              lift.stop(brakeType::coast);
          }
        }  
}

void liftMovement(){
  if(liftEnabled){

    if(liftPos == 0){      

      anglerTimeout(1000);
      angler.rotateTo(275, rotationUnits::deg, 100, velocityUnits::pct, true);

      anglerTimeout(1000);
      angler.rotateTo(0, rotationUnits::deg, 75, velocityUnits::pct, false);
      anglerOut = false;

      lift.stop(brakeType::coast);
      liftTimeout(1000);
      lift.rotateTo(0, rotationUnits::deg, 100, velocityUnits::pct, true);
    }
    else if(liftPos == 1){
      leftRoller.rotateFor(-145, rotationUnits::deg, 65, velocityUnits::pct, false);
  	  rightRoller.rotateFor(145, rotationUnits::deg, 65, velocityUnits::pct, false);

      liftTimeout(1000);
      lift.rotateTo(175, rotationUnits::deg, 100, velocityUnits::pct, true); 
      lift.stop(brakeType::hold);


      anglerOut = true;
     // if(angler.rotation(rotationUnits::deg) < 700){
      	anglerTimeout(1000);
      	angler.rotateTo(200, rotationUnits::deg, 100, velocityUnits::pct, false);
     // }

   //   leftRoller.rotateFor(-120, rotationUnits::deg, 50, velocityUnits::pct, false);
  	//  rightRoller.rotateFor(120, rotationUnits::deg, 50, velocityUnits::pct, false);


      liftTimeout(1000);

      lift.rotateTo(615, rotationUnits::deg, 100, velocityUnits::pct, true); 
      lift.stop(brakeType::hold);



      

/*
      leftRoller.spin(directionType::fwd, (maxSpeed), velocityUnits::pct);
  	  rightRoller.spin(directionType::rev, (maxSpeed), velocityUnits::pct);

  	  leftRoller.rotateFor(180, rotationUnits::deg, 50,velocityUnits::pct, false)
  	  rightRoller.rotateFor(180, rotationUnits::deg, 50,velocityUnits::pct, false)

*/
      



    }
  }

  //turn off lift movement
  liftEnabled = false;
}


int liftTask(){
  while(true){
    if(!autoRunning){
      liftButtonDetect();
      liftMovement();
      //liftControl();
    }
    task::sleep(20);
  }
return 0;
}


int driveTask(){
  while(true){
    if(!autoRunning){
      driveLockDetect();
      straightDrive();
    }
    task::sleep(20);
  }
  return 0;
    }

    void controllerDisplay(){
      Controller1.Screen.clearScreen();
        if(!driveLockOn){
          Controller1.Screen.setCursor(3, 1);
          Controller1.Screen.print("Off");
        }
        else
        {
          Controller1.Screen.setCursor(3, 1);
          Controller1.Screen.print("On");
        }    
    }

    void brainDisplay(){
        Brain.Screen.clearScreen();
        Brain.Screen.printAt(1, 40, "aPos:");
        Brain.Screen.printAt(100, 40, "%d", aPos);

        Brain.Screen.printAt(1, 60, "autoTime:");
        Brain.Screen.printAt(100, 60, "%f", (endTime / 1000));
    }

    //task only used to update brain and controller displays
    //also used to select auton's
    int displayTask(){
      while(true){
        if(!autoRunning){
          controllerDisplay();
          brainDisplay();
        }
          //to not waste resources - 150 cause display doesn't need to be updated super fast
          task::sleep(150);
      }
      return 0;
    }

    void driveTrainControl(void){
      if(!straightMove){
        moveLeft(Controller1.Axis3.value() * driveFrac);
        moveRight(Controller1.Axis2.value() * driveFrac);
      }

      if(aPos > 450)
        driveFrac = 0.40;
      else
      	driveFrac = 1;
      
    }

    void rollerControl(void){
    	if(!liftEnabled){

	        if(Controller1.ButtonL2.pressing()){
	          rollersOn = true;
	          leftRoller.spin(directionType::fwd, (maxSpeed), velocityUnits::pct);
	          rightRoller.spin(directionType::rev, (maxSpeed), velocityUnits::pct);
	        }
	        else if(Controller1.ButtonL1.pressing()){
	          rollersOn = true;
	          leftRoller.spin(directionType::rev, (maxSpeed * rollerFrac), velocityUnits::pct);
	          rightRoller.spin(directionType::fwd, (maxSpeed * rollerFrac), velocityUnits::pct);
	        }
	        else {
	          rollersOn = false;
	        if(aPos > 300){
	          leftRoller.stop(brakeType::coast);
	          rightRoller.stop(brakeType::coast);
	        }
	        else if(aPos < 300){
	          leftRoller.stop(brakeType::hold);
	            rightRoller.stop(brakeType::hold);
	        }
	        else {
	          leftRoller.stop(brakeType::hold);
	          rightRoller.stop(brakeType::hold);
	        }
	        }
	    }

        if(aPos > 250)
          rollerFrac = 0.25;
        else
          rollerFrac = 1;
    }
    
    double anglerFrac;
    const int aLimit = 400;
    void anglerControl(){ 
      aPos = angler.rotation(rotationUnits::deg);

      if(aPos > aLimit)
        anglerFrac = 0.4;
      else if(aPos < aLimit)
        anglerFrac = 1;
      

    if(!liftEnabled){
      if((!anglerOut)){
        if(Controller1.ButtonR1.pressing() && (aPos < 870)){
          angler.spin(directionType::fwd, (maxSpeed * anglerFrac), velocityUnits::pct);
        }
        else if(Controller1.ButtonR2.pressing() && (aPos > 0)){
          angler.spin(directionType::rev, (maxSpeed), velocityUnits::pct);
        }
        else {
          if(aPos > (75))
            angler.stop(brakeType::hold);
          else
            angler.stop(brakeType::coast);
        }
      }

  }


    }
          
    void allRemoteFunc(void){
      if(!autoRunning){
        anglerControl(); 
        rollerControl();
        driveTrainControl();
      }
    }

void usercontrol(void) {
  //turn off auto (just in case)
  autoRunning = false;

  //initiate task for triggers, like drive control 
  task driveTriggers(driveTask);
  
  //initiate task for brain and controller displays
  task display(displayTask);

  //initiate lift task
  task liftTriggers(liftTask);
  resetDrive();

  //stop auto tasks
  task::stop(pidTask); 
  task::stop(turnTask);
  task::stop(singleTurnTask);

  while (true) {
    allRemoteFunc();
    wait(20, msec); // Sleep the task for a short amount of time to
  }
}

int main() {
  // Set up callbacks for autonomous and driver control periods.
  Competition.autonomous(autonomous);
  Competition.drivercontrol(usercontrol);
  // Run the pre-autonomous function.
  pre_auton();
  // Prevent main from exiting with an infinite loop.
  while (true) {
    wait(100, msec);
  }
}
